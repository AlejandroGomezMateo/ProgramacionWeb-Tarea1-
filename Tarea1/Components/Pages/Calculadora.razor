@page "/calculadora"
@rendermode InteractiveServer

<PageTitle>Calculadora</PageTitle>

<h1>Calculadora</h1>

<P>En esta seccion encontradas una Calculadora para las 4 operaciones basicas.</P>



<div>
    <label>Numero 1:</label>
    <input type="number" @bind="num1" class="form-control"/>
</div>

<div>
    <label>Numero 2:</label>
    <input type="number" @bind="num2" class="form-control"/>
</div>

<div class="mt-3">
    <button class="btn btn-primary" @onclick="Sumar">Sumar</button>
    <button class="btn btn-primary" @onclick="Restar">Restar</button>
    <button class="btn btn-primary" @onclick="Multiplicar">Multiplicar</button>
    <button class="btn btn-primary" @onclick="Dividir">Dividir</button>
</div>

<div>
    <label>Resultado:</label>
    <div class="form-control">
        @resultado
    </div>
</div>



@code{

    double num1 = 0;
    double num2 = 0;
    double resultado = 0;

    void Sumar(){
        resultado = num1 + num2;
    }

    void Restar(){
        resultado = num1 - num2;
    }
    void Multiplicar(){
        resultado = num1 * num2;
    }
    void Dividir(){
        resultado = num1 / num2;
    }
}
